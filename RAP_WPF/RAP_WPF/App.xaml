<Application x:Class="RAP_WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:RAP_WPF"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <local:ResearcherAdapter x:Key="researcher"/>
        <ObjectDataProvider x:Key="researcherList"
                            ObjectInstance="{StaticResource researcher}"
                            MethodName="GetViewableList">
        </ObjectDataProvider>
    </Application.Resources>
</Application>
