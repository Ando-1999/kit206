<UserControl x:Class="RAP.View.TypeFilterUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RAP.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <!-- Change Resource -->
        <ComboBox HorizontalAlignment="Left" Margin="10,26,0,0" VerticalAlignment="Top" Width="85"
                  ItemsSource="{Binding Source={StaticResource levelVals}}"
                  SelectedIndex="0" SelectionChanged="ComboBox_SelectionChanged" Height="23" />
        <Label Content="Filter by Type:" HorizontalAlignment="Left" Margin="10,4,0,0" VerticalAlignment="Top" Height="27"/>
    </Grid>
</UserControl>
